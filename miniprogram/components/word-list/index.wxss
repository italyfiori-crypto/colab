/* 可复用的单词列表组件样式 */
.word-list-component {
  width: 100%;
  max-width: 100%;
  overflow: hidden;
}

/* ==================== 完整模式样式 ==================== */
.word-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  max-width: 100%;
  overflow: hidden;
}

/* 继承vocabulary页面的完整样式 */
.word-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 0;
  display: flex;
  flex-direction: column;
  position: relative;
  min-height: 140rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  opacity: 1;
}

.word-item:active {
  transform: scale(0.98);
}

.word-item.new {
  /* 移除左侧颜色边框 */
  /* border-left: 6rpx solid #007AFF; */
}

.word-item.review {
  /* 移除左侧颜色边框 */
  /* border-left: 6rpx solid #34C759; */
}


.word-item.new {
  background: linear-gradient(135deg, #e3f2fd 0%, #f0f9ff 100%);
  border-left: 4rpx solid #2196f3;
}

.word-item.learned {
  background: linear-gradient(135deg, #e8f5e8 0%, #f0fff4 100%);
  border-left: 4rpx solid #4caf50;
  animation: bounce 0.6s ease-out;
}

.word-item.reviewed {
  background: linear-gradient(135deg, #f3e5f5 0%, #faf5ff 100%);
  border-left: 4rpx solid #9c27b0;
  animation: bounce 0.6s ease-out;
}

.word-item.overdue {
  background: linear-gradient(135deg, #ffebee 0%, #fff5f5 100%);
  border-left: 4rpx solid #f44336;
  box-shadow: 0 4rpx 16rpx rgba(255, 143, 90, 0.15);
}

.word-item.completed {
  animation: pulse 0.5s ease-out;
}

.word-item.removing {
  animation: slideOutLeft 0.4s ease-in forwards;
}

.word-item.expanded {
  min-height: 140rpx;
}

/* 序号容器 */
.word-number-container {
  position: absolute;
  left: 0;
  top: 0;
  width: 48rpx;
  height: 100%;
  background-color: #ebebeb;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  z-index: 1;
  transition: all 0.3s ease;
}

.word-number-container.learned-bg {
  background-color: #e1f5fe;
}

.word-number-container.reviewed-bg {
  background-color: #e8f5e8;
}

.word-number {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 400;
  color: #666666;
}

/* 内容区域容器 */
.word-content {
  display: flex;
  align-items: center;
  width: calc(100% - 48rpx);
  margin-left: 48rpx;
  min-height: 140rpx;
  gap: 16rpx;
  padding: 0 32rpx 0 16rpx;
  position: relative;
}

.word-content.no-number {
  width: 100%;
  margin-left: 0;
  padding: 0 32rpx;
}

/* 单词主要信息 */
.word-main {
  flex: 0 0 auto;
  min-width: 160rpx;
  max-width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  min-height: 140rpx;
  padding: 24rpx 16rpx;
  position: relative;
}

.word-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  width: 100%;
  margin-bottom: 6rpx;
}

.word-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.2;
  flex: 1;
}

/* 音频播放按钮 */
.audio-btn {
  font-size: 28rpx;
  padding: 8rpx;
  border-radius: 50%;
  background: rgba(0, 122, 255, 0.1);
  color: #007aff;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44rpx;
  height: 44rpx;
  flex-shrink: 0;
}

.audio-btn:active {
  transform: scale(0.9);
  background: rgba(0, 122, 255, 0.2);
}

.audio-btn.playing {
  background: rgba(0, 122, 255, 0.3);
  animation: pulse-audio 1.5s ease-in-out infinite;
}

@keyframes pulse-audio {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.audio-btn-small {
  font-size: 24rpx;
  padding: 6rpx;
  border-radius: 50%;
  background: rgba(0, 122, 255, 0.1);
  color: #007aff;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  flex-shrink: 0;
}

.audio-btn-small:active {
  transform: scale(0.9);
  background: rgba(0, 122, 255, 0.2);
}

.audio-btn-small.playing {
  background: rgba(0, 122, 255, 0.3);
  animation: pulse-audio 1.5s ease-in-out infinite;
}

.word-phonetic {
  font-size: 22rpx;
  color: #6b7280;
  font-family: "Monaco", "Consolas", monospace;
}

/* 添加音标符号 */
.word-phonetic::before {
  content: "/";
  display: inline;
}

.word-phonetic::after {
  content: "/";
  display: inline;
}

/* 翻译区域 */
.word-translation {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  min-height: 140rpx;
  padding: 24rpx 0;
  overflow: hidden;
  position: relative;
}

.translation-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  width: 100%;
  overflow: hidden;
}

.translation-item {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  line-height: 1.4;
  width: 100%;
  max-width: 100%;
}

.part-of-speech {
  flex: 0 0 auto;
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 500;
  min-width: 48rpx;
}

.meaning {
  flex: 1;
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: break-all;
}

/* 简化遮罩层样式 */
.simple-mask-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
  font-size: 24rpx;
  z-index: 10;
  margin: 0;
  padding: 0;
  cursor: pointer;
  pointer-events: auto;
  background: rgba(192, 192, 192, 1);
  transition: opacity 0.3s ease;
}

.simple-mask-overlay.chinese {
  background: rgba(192, 192, 192, 1);
}

.simple-mask-overlay:active {
  opacity: 0.9;
}

.mask-text {
  font-size: 24rpx;
  color: #ffffff;
}

/* 逾期单词处理按钮 */
.overdue-actions {
  width: calc(100% - 48rpx);
  margin-left: 40rpx;
  background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
  border-top: 1rpx solid #e5e5e5;
  padding: 14rpx 16rpx;
  margin-top: 0;
  border-radius: 0 0 20rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  text-align: center;
}

.overdue-text {
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 600;
  background: #ff8f5a;
  padding: 0;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  flex-shrink: 0;
  border: none;
}

.overdue-buttons {
  display: flex;
  gap: 10rpx;
}

.overdue-btn {
  flex: 0 0 auto;
  height: 48rpx;
  min-width: 90rpx;
  padding: 0 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.remember-btn {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: #ffffff;
  border: 1rpx solid rgba(56, 158, 13, 0.3);
}

.vague-btn {
  background: linear-gradient(135deg, #fa8c16 0%, #d46b08 100%);
  color: #ffffff;
  border: 1rpx solid rgba(212, 107, 8, 0.3);
}

.forgot-btn {
  background: linear-gradient(135deg, #ff4d4f 0%, #cf1322 100%);
  color: #ffffff;
  border: 1rpx solid rgba(207, 19, 34, 0.3);
}


/* ==================== 只读模式样式 ==================== */
.word-list-readonly {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.word-item-readonly {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
}

.word-main-readonly {
  flex: 0 0 auto;
  min-width: 140rpx;
  max-width: 160rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.word-header-readonly {
  display: flex;
  align-items: center;
  gap: 8rpx;
  width: 100%;
}

.word-text-readonly {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.2;
  flex: 1;
}

.word-phonetic-readonly {
  font-size: 20rpx;
  color: #666666;
  font-family: "Monaco", "Consolas", monospace;
}

.word-translation-readonly {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.translation-item-readonly {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
  line-height: 1.3;
}

.part-of-speech-readonly {
  flex: 0 0 auto;
  font-size: 20rpx;
  color: #999999;
  font-weight: 500;
  min-width: 44rpx;
}

.meaning-readonly {
  flex: 1;
  font-size: 24rpx;
  color: #4b5563;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* ==================== 动画效果 ==================== */

@keyframes bounce {
  0%,
  20%,
  50%,
  80%,
  100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-8rpx);
  }
  60% {
    transform: translateY(-4rpx);
  }
}

@keyframes slideOutLeft {
  0% {
    transform: translateX(0);
    opacity: 1;
  }
  100% {
    transform: translateX(-100%);
    opacity: 0;
  }
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

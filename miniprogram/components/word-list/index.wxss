/* 可复用的单词列表组件样式 */
.word-list-component {
  width: 100%;
  max-width: 100%;
  overflow: hidden;
}

/* ==================== 完整模式样式 ==================== */
.word-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  max-width: 100%;
  overflow: hidden;
}

/* 继承vocabulary页面的完整样式 */
.word-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 0;
  display: flex;
  flex-direction: column;
  position: relative;
  height: 160rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  opacity: 1;
}

.word-item:active {
  transform: scale(0.98);
}

/* 学习相关：待学习和已学习统一为淡蓝色 */
.word-item.new,
.word-item.learned {
  background: linear-gradient(135deg, #e3f2fd 0%, #f0f9ff 100%);
  
}

/* 复习相关：待复习和已复习统一为薄荷绿色 */
.word-item.review,
.word-item.reviewed {
  background: linear-gradient(135deg, #ecfdf5 0%, #f0fdf4 100%);
  
}

.word-item.overdue {
  background: linear-gradient(135deg, #ffebee 0%, #fff5f5 100%);
  box-shadow: 0 4rpx 16rpx rgba(255, 143, 90, 0.15);
}

.word-item.completed {
  /* 完成状态不需要特殊样式，只触发动画 */
}

.word-item.removing {
  animation: slideOutLeft 0.4s ease-in forwards;
}

.word-item.expanded {
  min-height: 140rpx;
}

/* 逾期单词恢复正常高度，因为操作按钮已移出卡片 */
.word-item.overdue {
  height: 160rpx;
}

/* 逾期单词包装器 */
.word-item-wrapper.overdue {
  display: flex;
  flex-direction: column;
  margin-bottom: 32rpx;
}

/* 序号容器 */
.word-number-container {
  position: absolute;
  left: 0;
  top: 0;
  width: 48rpx;
  height: 100%;
  background-color: #ebebeb;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  z-index: 1;
}

/* 学习相关序号容器：介于边框和背景之间的蓝色 */
.word-number-container.learned-bg {
  background-color: #bbdefb;
}

/* 复习相关序号容器：介于边框和背景之间的绿色 */
.word-number-container.reviewed-bg {
  background-color: #a5d6a7;
}

/* 逾期单词序号容器：介于边框和背景之间的红色 */
.word-number-container.overdue-bg {
  background-color: #ffcdd2;
}

.word-number {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 500;
  color: #666666;
}

/* 内容区域容器 */
.word-content {
  display: flex;
  align-items: center;
  width: calc(100% - 48rpx);
  margin-left: 48rpx;
  height: 160rpx;
  gap: 16rpx;
  padding: 0 32rpx 0 16rpx;
  position: relative;
}

.word-content.no-number {
  width: 100%;
  margin-left: 0;
  padding: 0 32rpx;
}

/* 单词主要信息 */
.word-main {
  flex: 0 0 32%;
  width: 32%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  height: 160rpx;
  position: relative;
}

.word-header {
  position: relative;
  display: flex;
  align-items: center;
  gap: 8rpx;
  width: 100%;
  margin-bottom: 6rpx;
  padding: 16rpx 12rpx 0 12rpx;
}

.word-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.2;
  flex: 1;
}

/* 音频播放按钮 */
.audio-btn {
  font-size: 28rpx;
  padding: 8rpx;
  border-radius: 50%;
  background: rgba(0, 122, 255, 0.1);
  color: #007aff;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44rpx;
  height: 44rpx;
  flex-shrink: 0;
}

.audio-btn:active {
  transform: scale(0.9);
  background: rgba(0, 122, 255, 0.2);
}

.audio-btn.playing {
  background: rgba(0, 122, 255, 0.3);
  animation: pulse-audio 1.5s ease-in-out infinite;
}

@keyframes pulse-audio {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.audio-btn-small {
  font-size: 24rpx;
  padding: 6rpx;
  border-radius: 50%;
  background: rgba(0, 122, 255, 0.1);
  color: #007aff;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  flex-shrink: 0;
}

.audio-btn-small:active {
  transform: scale(0.9);
  background: rgba(0, 122, 255, 0.2);
}

.audio-btn-small.playing {
  background: rgba(0, 122, 255, 0.3);
  animation: pulse-audio 1.5s ease-in-out infinite;
}

.word-phonetic {
  font-size: 22rpx;
  color: #6b7280;
  font-family: "Monaco", "Consolas", monospace;
  padding: 0 12rpx 16rpx 12rpx;
}

/* 添加音标符号 */
.word-phonetic::before {
  content: "/";
  display: inline;
}

.word-phonetic::after {
  content: "/";
  display: inline;
}

/* 翻译区域 */
.word-translation {
  flex: 0 0 68%;
  width: 68%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  height: 160rpx;
  overflow: hidden;
  position: relative;
}

/* 当显示收藏按钮时，为收藏按钮留出空间 */
.word-item.has-favorite-btn .word-translation {
  margin-right: 60rpx; /* 为收藏按钮留出空间 */
}

/* 当同时显示序号和收藏按钮时，调整翻译区域宽度 */
.word-item.has-favorite-btn .word-content {
  width: calc(100% - 48rpx - 60rpx); /* 减去序号宽度和收藏按钮宽度 */
}

.translation-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  width: 100%;
  overflow: hidden;
  padding: 16rpx 0;
}

.translation-item {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  line-height: 1.4;
  width: 100%;
  max-width: 100%;
}

/* 隐藏超过3个的释义条目 */
.translation-item:nth-child(n+4) {
  display: none;
}

.part-of-speech {
  flex: 0 0 auto;
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 500;
  min-width: 48rpx;
}

.meaning {
  flex: 1;
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.4;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 简化遮罩层样式 */
.simple-mask-overlay {
  position: absolute;
  top: -16rpx;
  left: -12rpx;
  right: -12rpx;
  bottom: -16rpx;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
  font-size: 24rpx;
  z-index: 10;
  margin: 0;
  padding: 0;
  cursor: pointer;
  pointer-events: auto;
  background: rgba(192, 192, 192, 1);
  transition: opacity 0.3s ease;
}

.simple-mask-overlay.chinese {
  background: rgba(192, 192, 192, 1);
  top: -16rpx;
  bottom: -16rpx;
  left: 0;
  right: 0;
}

.simple-mask-overlay:active {
  opacity: 0.9;
}

.mask-text {
  font-size: 24rpx;
  color: #ffffff;
}

/* 逾期单词处理按钮 */
.overdue-actions {
  width: calc(100% - 48rpx);
  margin-left: 40rpx;
  background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
  border-top: 1rpx solid #e5e5e5;
  padding: 14rpx 16rpx;
  margin-top: 0;
  border-radius: 0 0 20rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  text-align: center;
}

/* 逾期信息（显示在单词右侧） */
.overdue-info {
  display: flex;
  align-items: center;
  margin-left: 8rpx;
}

.overdue-text {
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 600;
  background: #ff8f5a;
  padding: 0;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  flex-shrink: 0;
  border: none;
}

.overdue-buttons {
  display: flex;
  gap: 10rpx;
}

.overdue-btn {
  flex: 0 0 auto;
  height: 48rpx;
  min-width: 90rpx;
  padding: 0 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.remember-btn {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: #ffffff;
  border: 1rpx solid rgba(56, 158, 13, 0.3);
}

.vague-btn {
  background: linear-gradient(135deg, #fa8c16 0%, #d46b08 100%);
  color: #ffffff;
  border: 1rpx solid rgba(212, 107, 8, 0.3);
}

.forgot-btn {
  background: linear-gradient(135deg, #ff4d4f 0%, #cf1322 100%);
  color: #ffffff;
  border: 1rpx solid rgba(207, 19, 34, 0.3);
}

/* 外部逾期单词操作按钮 - 位于卡片下方 */
.overdue-actions-external {
  width: 100%;
  padding: 16rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.overdue-actions-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
  border: 1rpx solid #e5e5e5;
  border-radius: 28rpx;
  padding: 12rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.overdue-info-badge {
  flex-shrink: 0;
}

.overdue-info-badge .overdue-text {
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 600;
  background: #ff8f5a;
  padding: 0;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  border: none;
}



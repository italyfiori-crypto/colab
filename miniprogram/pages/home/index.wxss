/* home页面样式 */
page {
  background-color: #f8f9fa;
  height: 100vh;
}

.home-container {
  padding-bottom: 60px; /* 为底部导航留空间 */
  background-color: #fff;
}

/* 搜索栏样式 */
.search-container {
  padding: 10px 15px 20px;
  background-color: #fff;
}

.search-bar {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 20px;
  height: 40px;
  padding: 0 15px;
}

.search-icon {
  margin-right: 8px;
}

.search-input {
  flex: 1;
  font-size: 14px;
  color: #333;
}

.search-input::placeholder {
  color: #999;
}

/* 通用区块样式 */
.section {
  margin-bottom: 0;
  background-color: #fff;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 15px 15px;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.section-action {
  font-size: 14px;
  color: #007AFF;
}

/* 最近学习区域 */
.recent-section {
  padding-bottom: 15px;
}

.books-scroll {
  white-space: nowrap;
}

.books-list {
  display: flex;
  padding: 0 15px;
}

.book-card {
  display: inline-block;
  width: 140px;
  margin-right: 15px;
  vertical-align: top;
}

.book-card:last-child {
  margin-right: 15px; /* 保持右侧边距 */
}

.book-cover-wrapper {
  width: 140px;
  height: 180px;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  margin-bottom: 8px;
}

.book-cover {
  width: 100%;
  height: 100%;
}

.book-info {
  width: 140px;
}

.book-title {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: #333;
  line-height: 1.3;
  margin-bottom: 4px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-author {
  display: block;
  font-size: 12px;
  color: #666;
  margin-bottom: 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-progress {
  display: flex;
  align-items: center;
}

.progress-bar {
  flex: 1;
  height: 3px;
  background-color: #e0e0e0;
  border-radius: 2px;
  overflow: hidden;
  margin-right: 8px;
}

.progress {
  height: 100%;
  background-color: rgb(52, 152, 219);
  border-radius: 2px;
}

.progress-text {
  font-size: 12px;
  color: rgb(52, 152, 219);
  font-weight: 500;
}

/* 分类书籍区域 */
.category-section {
  padding-bottom: 0;
  margin-bottom: 0;
}

.category-tabs-scroll {
  white-space: nowrap;
  margin-bottom: 15px;
}

.category-tabs {
  display: flex;
  padding: 0 15px;
  gap: 4px;
}

.category-tab {
  display: inline-block;
  padding: 6px 16px;
  margin-right: 15px;
  border-radius: 16px;
  font-size: 13px;
  color: #666;
  background-color: #f5f5f5;
  border: none;
  white-space: nowrap;
}

.category-tab.active {
  background-color: rgb(52, 152, 219);
  color: #fff;
}

.category-tab::after {
  border: none;
}

/* 书籍网格 */
.books-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 15px;
  justify-content: space-between;
}

.book-grid-item {
  width: calc(50% - 7.5px);
  margin-bottom: 20px;
}

.book-grid-item .book-cover-wrapper {
  width: 100%;
  height: 200px;
}

.book-grid-item .book-info {
  width: 100%;
}

.book-grid-item .book-author {
    margin-bottom: 4px;
}

.book-grid-item .book-title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  white-space: normal;
  line-height: 1.4;
  height: 2.8em;
  margin-bottom: 0px;
}

/* 底部导航栏 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60px;
  background-color: #fff;
  border-top: 1px solid #e0e0e0;
  display: flex;
  z-index: 1000;
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 5px 0;
}

.nav-icon {
  margin-bottom: 2px;
}

.nav-text {
  font-size: 10px;
  color: #999;
}

.nav-item.active .nav-text {
  color: #007AFF;
}

/* 响应式调整 */
@media (max-width: 320px) {
  .book-card {
    width: 120px;
  }
  
  .book-cover-wrapper {
    width: 120px;
    height: 160px;
  }
  
  .book-info {
    width: 120px;
  }
}
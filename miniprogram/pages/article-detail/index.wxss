.container {
  height: 100vh;
  background: linear-gradient(135deg, #4A5AE8 0%, #6C5CE7 100%);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 字幕滚动区域 */
.subtitle-container {
  flex: 1;
  height: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.subtitle-list {
  width: 100%;
}

.subtitle-spacer {
  height: 50vh;
}

.subtitle-item {
  text-align: center;
  padding: 40rpx 0;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  opacity: 0.4;
  transform: scale(0.9);
}

.subtitle-item.active {
  opacity: 1;
  transform: scale(1);
}

.subtitle-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 20rpx;
}

.subtitle-english {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 1.6;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.subtitle-chinese {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.subtitle-item.active .subtitle-english {
  font-size: 40rpx;
  color: #FFFFFF;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.subtitle-item.active .subtitle-chinese {
  font-size: 30rpx;
  color: #FFFFFF;
}

.subtitle-item.active .subtitle-time {
  color: rgba(255, 255, 255, 0.8);
}

/* 底部控制栏 */
.control-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  padding: 30rpx 40rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  border-radius: 40rpx 40rpx 0 0;
}

.progress-container {
  margin-bottom: 30rpx;
}

.progress-slider {
  width: 100%;
  margin: 0;
}

.controls {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 60rpx;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.2s ease;
}

.control-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.play-btn {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.control-icon {
  width: 48rpx;
  height: 48rpx;
}

.play-icon {
  width: 60rpx;
  height: 60rpx;
}

/* 设置弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 1000;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.settings-modal {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.modal-overlay.show .settings-modal {
  transform: scale(1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background: #F5F5F5;
}

.close-icon {
  width: 32rpx;
  height: 32rpx;
}

.modal-content {
  padding: 40rpx;
}

.setting-item {
  margin-bottom: 50rpx;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.speed-options,
.subtitle-options {
  display: flex;
  gap: 16rpx;
}

.speed-btn,
.subtitle-btn {
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  background: #F5F5F5;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.speed-btn.active,
.subtitle-btn.active {
  color: #FFFFFF;
  background: #4A5AE8;
  font-weight: 500;
}

/* 滚动样式优化 */
.subtitle-container::-webkit-scrollbar {
  display: none;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .subtitle-english {
    font-size: 32rpx;
  }
  
  .subtitle-item.active .subtitle-english {
    font-size: 36rpx;
  }
  
  .controls {
    gap: 40rpx;
  }
  
  .control-btn {
    width: 70rpx;
    height: 70rpx;
  }
  
  .play-btn {
    width: 100rpx;
    height: 100rpx;
  }
}

/* 优化触摸反馈 */
.subtitle-item {
  -webkit-tap-highlight-color: transparent;
}

.control-btn,
.speed-btn,
.subtitle-btn {
  -webkit-tap-highlight-color: transparent;
  user-select: none;
}

/* 安全区域适配 */
@supports (bottom: env(safe-area-inset-bottom)) {
  .control-bar {
    padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  }
} 
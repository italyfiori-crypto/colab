.container {
  height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 字幕滚动区域 */
.subtitle-container {
  flex: 1;
  height: 100%;
  padding: 10px 40rpx calc(270rpx + env(safe-area-inset-bottom)) 40rpx;
  box-sizing: border-box;
  background: #f8f9fa;
}

.subtitle-list {
  width: 100%;
}

.subtitle-spacer {
  height: 35vh;
}

.subtitle-item {
  text-align: left;
  padding: 16rpx 40rpx;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
  opacity: 0.5;
}

.subtitle-item.active {
  opacity: 1;
}

.subtitle-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.subtitle-english {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.subtitle-chinese {
  font-size: 34rpx;
  font-weight: 700;
  color: #666;
  line-height: 1.5;
}

.subtitle-item.active .subtitle-english {
  font-size: 34rpx;
  color: rgb(52, 152, 219);
}

.subtitle-item.active .subtitle-chinese {
  font-size: 34rpx;
  color: #333;
}

.subtitle-item.active .subtitle-time {
  color: rgb(52, 152, 219);
}

/* 底部控制栏 */
.control-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1rpx solid #e0e0e0;
  padding: 20rpx 40rpx;
  padding-bottom: calc(10rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 第一行：功能按钮 */
.top-controls {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.top-control-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.2s ease;
}

.top-control-btn:active {
  transform: scale(0.9);
}

.top-control-btn.active {
  background: rgba(52, 152, 219, 0.1);
  border-radius: 50%;
}

.top-control-btn.active .top-control-icon {
  opacity: 1;
  filter: brightness(0) saturate(100%) invert(42%) sepia(93%) saturate(1352%) hue-rotate(204deg) brightness(95%) contrast(86%);
}

.top-control-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 第二行：进度条 */
.progress-container {
  margin: 0;
}

.progress-slider {
  width: 100%;
  margin: 0;
}

/* 第三行：播放控制 */
.controls {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 80rpx;
}

.control-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.2s ease;
}

.control-btn:active {
  transform: scale(0.9);
}

.play-btn {
  width: 70rpx;
  height: 70rpx;
  /* background: rgb(52, 152, 219);
  border-radius: 50%;
  box-shadow: 0 6rpx 20rpx rgba(52, 152, 219, 0.3); */
}

.control-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 设置弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 1000;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.settings-modal {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.modal-overlay.show .settings-modal {
  transform: scale(1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background: #F5F5F5;
}

.close-icon {
  width: 32rpx;
  height: 32rpx;
}

.modal-content {
  padding: 40rpx;
}

.setting-item {
  margin-bottom: 50rpx;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.speed-options,
.subtitle-options {
  display: flex;
  gap: 16rpx;
}

.speed-btn,
.subtitle-btn {
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  background: #F5F5F5;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.speed-btn.active,
.subtitle-btn.active {
  color: #FFFFFF;
  background: rgb(52, 152, 219);
  font-weight: 500;
}

/* 滚动样式优化 */
.subtitle-container::-webkit-scrollbar {
  display: none;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .subtitle-container {
    padding: 10px 40rpx calc(240rpx + env(safe-area-inset-bottom)) 40rpx;
  }
  
  .subtitle-english {
    font-size: 30rpx;
  }
  
  .subtitle-chinese {
    font-size: 30rpx;
  }
  
  .subtitle-item.active .subtitle-english {
    font-size: 30rpx;
  }
  
  .subtitle-item.active .subtitle-chinese {
    font-size: 30rpx;
  }
  
  .top-controls {
    gap: 40rpx;
  }
  
  .top-control-btn {
    width: 60rpx;
    height: 60rpx;
  }
  
  .top-control-icon {
    width: 36rpx;
    height: 36rpx;
  }
  
  .controls {
    gap: 60rpx;
  }
  
  .control-btn {
    width: 60rpx;
    height: 60rpx;
  }
  
  .control-icon {
    width: 36rpx;
    height: 36rpx;
  }
  
  .play-btn {
    width: 60rpx;
    height: 60rpx;
  }
}

/* 优化触摸反馈 */
.subtitle-item {
  -webkit-tap-highlight-color: transparent;
}

.control-btn,
.speed-btn,
.subtitle-btn {
  -webkit-tap-highlight-color: transparent;
  user-select: none;
}

/* 单词卡片弹出层样式 */
.vocabulary-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.vocabulary-overlay.show {
  opacity: 1;
  visibility: visible;
}

.vocabulary-card {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80vh;
  background-color: #ffffff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  transform: translateY(100%);
  transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  display: flex;
  flex-direction: column;
}

.vocabulary-card.slide-up {
  transform: translateY(0);
}

/* 卡片头部 */
.card-header {
  flex-shrink: 0;
  padding: 24rpx 32rpx 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.drag-handle {
  width: 80rpx;
  height: 8rpx;
  background-color: #e0e0e0;
  border-radius: 4rpx;
  margin: 0 auto 24rpx;
}

.card-title-bar {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 64rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  text-align: center;
}

.card-close-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f5f5f5;
  transition: background-color 0.2s ease;
}

.card-close-btn:active {
  background-color: #e0e0e0;
}

.card-close-btn .close-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 单词内容区域 */
.vocabulary-content {
  flex: 1;
  overflow: hidden;
  padding: 32rpx 0 40rpx;
}

/* 重用原有单词列表样式，并进行微调 */
.vocabulary-card .word-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.vocabulary-card .word-item {
  background: #f8f8f8;
  border-radius: 20rpx;
  padding: 0;
  display: flex;
  position: relative;
  min-height: 120rpx;
  overflow: hidden;
  margin: 0 20rpx 20rpx 20rpx;
  transition: background-color 0.2s ease;
}

.vocabulary-card .word-item:active {
  opacity: 0.8;
}

/* 序号容器 */
.vocabulary-card .word-number-container {
  position: absolute;
  left: 0;
  top: 0;
  width: 40rpx;
  height: 100%;
  background-color: #ebebeb;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  z-index: 1;
}

.vocabulary-card .word-number {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 400;
  color: #666666;
}

/* 内容区域容器 */
.vocabulary-card .word-content {
  display: flex;
  align-items: center;
  width: 100%;
  margin-left: 40rpx;
  min-height: 120rpx;
}

/* 单词主要信息 */
.vocabulary-card .word-main {
  flex: 0 0 auto;
  width: 240rpx;
  padding: 24rpx 16rpx;
}

.vocabulary-card .word-text {
  font-size: clamp(28rpx, 4vw, 32rpx);
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6rpx;
  line-height: 1.2;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.vocabulary-card .word-phonetic {
  font-size: clamp(20rpx, 3vw, 22rpx);
  color: #6b7280;
  font-family: 'Monaco', 'Consolas', monospace;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 翻译区域 */
.vocabulary-card .word-translation {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 24rpx 0;
}

.vocabulary-card .translation-item {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  line-height: 1.4;
}

.vocabulary-card .part-of-speech {
  flex: 0 0 auto;
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 500;
  min-width: 48rpx;
}

.vocabulary-card .meaning {
  flex: 1;
  font-size: 26rpx;
  color: #4b5563;
  word-break: break-word;
  line-height: 1.4;
}

/* 操作按钮 */
.vocabulary-card .word-actions {
  flex: 0 0 auto;
  position: relative;
  z-index: 10;
  padding: 24rpx 20rpx;
  display: flex;
  align-items: center;
}

.vocabulary-card .favorite-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  position: relative;
  z-index: 20;
}

.vocabulary-card .favorite-btn:active {
  transform: scale(0.9);
}

.vocabulary-card .favorite-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.9;
  transition: all 0.2s ease;
}

.vocabulary-card .favorite-btn.favorited .favorite-icon {
  opacity: 1;
}

/* 安全区域适配 */
@supports (bottom: env(safe-area-inset-bottom)) {
  .control-bar {
    padding-bottom: calc(10rpx + env(safe-area-inset-bottom));
  }
} 
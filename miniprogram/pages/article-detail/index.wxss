.container {
  height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 字幕滚动区域 */
.subtitle-container {
  flex: 1;
  height: 100%;
  padding: 10px 40rpx calc(270rpx + env(safe-area-inset-bottom)) 40rpx;
  box-sizing: border-box;
  background: #f8f9fa;
}

.subtitle-list {
  width: 100%;
}

.subtitle-spacer {
  height: 35vh;
}

.subtitle-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 0;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
  opacity: 0.5;
}

.subtitle-item.active {
  opacity: 1;
}

.subtitle-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.subtitle-english {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.subtitle-chinese {
  font-size: 34rpx;
  font-weight: 700;
  color: #666;
  line-height: 1.5;
}

.subtitle-item.active .subtitle-english {
  font-size: 34rpx;
  color: rgb(52, 152, 219);
}

.subtitle-item.active .subtitle-chinese {
  font-size: 34rpx;
  color: #333;
}

.subtitle-item.active .subtitle-time {
  color: rgb(52, 152, 219);
}

/* 底部控制栏 */
.control-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1rpx solid #e0e0e0;
  padding: 20rpx 40rpx;
  padding-bottom: calc(10rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 第一行：功能按钮 */
.top-controls {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.top-control-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.2s ease;
}

.top-control-btn:active {
  transform: scale(0.9);
}

.top-control-btn.active {
  background: rgba(52, 152, 219, 0.1);
  border-radius: 50%;
}

.top-control-btn.active .top-control-icon {
  opacity: 1;
  filter: brightness(0) saturate(100%) invert(42%) sepia(93%) saturate(1352%) hue-rotate(204deg) brightness(95%) contrast(86%);
}

.top-control-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 第二行：进度条 */
.progress-container {
  margin: 0;
}

.progress-slider {
  width: 100%;
  margin: 0;
}

/* 第三行：播放控制 */
.controls {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 80rpx;
}

.control-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.2s ease;
}

.control-btn:active {
  transform: scale(0.9);
}

.play-btn {
  width: 70rpx;
  height: 70rpx;
  /* background: rgb(52, 152, 219);
  border-radius: 50%;
  box-shadow: 0 6rpx 20rpx rgba(52, 152, 219, 0.3); */
}

.control-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 设置弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 1000;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.settings-modal {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.modal-overlay.show .settings-modal {
  transform: scale(1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background: #F5F5F5;
}

.close-icon {
  width: 32rpx;
  height: 32rpx;
}

.modal-content {
  padding: 40rpx;
}

.setting-item {
  margin-bottom: 50rpx;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.speed-options,
.subtitle-options {
  display: flex;
  gap: 16rpx;
}

.speed-btn,
.subtitle-btn {
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  background: #F5F5F5;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.speed-btn.active,
.subtitle-btn.active {
  color: #FFFFFF;
  background: rgb(52, 152, 219);
  font-weight: 500;
}

/* 滚动样式优化 */
.subtitle-container::-webkit-scrollbar {
  display: none;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .subtitle-container {
    padding: 10px 40rpx calc(240rpx + env(safe-area-inset-bottom)) 40rpx;
  }
  
  .subtitle-english {
    font-size: 30rpx;
  }
  
  .subtitle-chinese {
    font-size: 30rpx;
  }
  
  .subtitle-item.active .subtitle-english {
    font-size: 30rpx;
  }
  
  .subtitle-item.active .subtitle-chinese {
    font-size: 30rpx;
  }
  
  .top-controls {
    gap: 40rpx;
  }
  
  .top-control-btn {
    width: 60rpx;
    height: 60rpx;
  }
  
  .top-control-icon {
    width: 36rpx;
    height: 36rpx;
  }
  
  .controls {
    gap: 60rpx;
  }
  
  .control-btn {
    width: 60rpx;
    height: 60rpx;
  }
  
  .control-icon {
    width: 36rpx;
    height: 36rpx;
  }
  
  .play-btn {
    width: 60rpx;
    height: 60rpx;
  }
}

/* 优化触摸反馈 */
.subtitle-item {
  -webkit-tap-highlight-color: transparent;
}

.control-btn,
.speed-btn,
.subtitle-btn {
  -webkit-tap-highlight-color: transparent;
  user-select: none;
}

/* 单词列表标题 */
.vocabulary-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  padding: 20rpx 40rpx 16rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

/* word-list组件自定义样式 */
.article-word-list {
  background: #fff;
}

/* 单词卡片弹出层样式 */
.vocabulary-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.vocabulary-overlay.show {
  opacity: 1;
  visibility: visible;
}

.vocabulary-card {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60vh;
  min-height: 400rpx;
  max-height: 80vh;
  background-color: #ffffff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  transform: translateY(100%);
  transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  display: flex;
  flex-direction: column;
}

.vocabulary-card.slide-up {
  transform: translateY(0);
}

/* 拖拽把手 */
.drag-handle {
  width: 80rpx;
  height: 8rpx;
  background-color: #e0e0e0;
  border-radius: 4rpx;
  margin: 24rpx auto 0;
  flex-shrink: 0;
}


/* 单词内容区域 */
.vocabulary-content {
  flex: 1;
  overflow-y: auto;
}

/* 重用原有单词列表样式，并进行微调 */
.vocabulary-content .word-list {
  display: flex;
  flex-direction: column;
  gap: 0;
  padding: 20rpx;
}

.vocabulary-content .word-item {
  background: #f8f8f8;
  border-radius: 20rpx;
  padding: 0;
  display: flex;
  position: relative;
  min-height: 140rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
  transition: all 0.2s ease;
}

.vocabulary-content .word-item:active {
  opacity: 0.8;
}

/* 序号容器 */
.vocabulary-content .word-number-container {
  position: absolute;
  left: 0;
  top: 0;
  width: 40rpx;
  height: 100%;
  background-color: #ebebeb;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  z-index: 1;
  transition: all 0.3s ease;
}

.vocabulary-content .word-number {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 400;
  color: #666666;
}

/* 内容区域容器 */
.vocabulary-content .word-content {
  display: flex;
  align-items: center;
  width: calc(100% - 40rpx);
  margin-left: 40rpx;
  min-height: 140rpx;
  gap: 16rpx;
}

/* 单词主要信息 */
.vocabulary-content .word-main {
  flex: 0 0 200rpx;
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  min-height: 140rpx;
  padding: 0 16rpx;
}

.vocabulary-content .word-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6rpx;
  line-height: 1.2;
}

.vocabulary-content .word-phonetic {
  font-size: 22rpx;
  color: #6b7280;
  font-family: 'Monaco', 'Consolas', monospace;
}

/* 翻译区域 */
.vocabulary-content .word-translation {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  min-height: 140rpx;
  overflow: hidden;
}

/* 翻译内容容器 */
.vocabulary-content .translation-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  justify-content: center;
  height: 100%;
}

.vocabulary-content .translation-item {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  line-height: 1.4;
  width: 100%;
  max-width: 100%;
}

.vocabulary-content .part-of-speech {
  flex: 0 0 auto;
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 500;
  min-width: 48rpx;
}

.vocabulary-content .meaning {
  flex: 1;
  font-size: 26rpx;
  color: #4b5563;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
  word-break: break-all;
}

/* 操作按钮 */
.vocabulary-content .word-actions {
  flex: 0 0 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 140rpx;
}

/* 加载状态样式 */
.loading-more {
  padding: 32rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.no-more {
  padding: 32rpx 0;
  text-align: center;
  color: #ccc;
  font-size: 26rpx;
}

.vocabulary-content .favorite-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  position: relative;
  z-index: 20;
}

.vocabulary-content .favorite-btn:active {
  transform: scale(0.9);
}

.vocabulary-content .favorite-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.9;
  transition: all 0.2s ease;
}

.vocabulary-content .favorite-btn.favorited .favorite-icon {
  opacity: 1;
}

/* 时间标记样式 */
.time-marker {
  flex: 0 0 auto;
  width: 80rpx;
  padding: 8rpx 12rpx;
  margin-right: 16rpx;
  background: rgba(52, 152, 219, 0.1);
  border-radius: 8rpx;
  text-align: center;
  font-size: 22rpx;
  color: #666;
  cursor: pointer;
  transition: all 0.2s ease;
}

.time-marker:active {
  background: rgba(52, 152, 219, 0.2);
  transform: scale(0.95);
}

.subtitle-item.active .time-marker {
  background: rgba(52, 152, 219, 0.15);
  color: rgb(52, 152, 219);
  font-weight: 500;
}

/* 字幕内容区域 */
.subtitle-content {
  flex: 1;
  padding: 0 16rpx;
}

/* 可点击单词样式 */
.word-clickable {
  color: #333;
  padding: 2rpx 0;
  border-radius: 4rpx;
  transition: all 0.2s ease;
  cursor: pointer;
}

.word-clickable:active {
  background: rgba(52, 152, 219, 0.1);
  color: rgb(52, 152, 219);
}

.subtitle-item.active .word-clickable {
  color: rgb(52, 152, 219);
}

.subtitle-item.active .word-clickable:active {
  background: rgba(52, 152, 219, 0.2);
}

.punctuation {
  color: inherit;
}

/* 单词详情弹窗样式 */
.word-detail-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  z-index: 3000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.word-detail-overlay.show {
  opacity: 1;
  visibility: visible;
}

.word-detail-modal {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  max-height: 70vh;
  background-color: #ffffff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  transform: translateY(100%);
  transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  display: flex;
  flex-direction: column;
}

.word-detail-modal.slide-up {
  transform: translateY(0);
}

/* 单词详情内容 */
.word-detail-content {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

.word-main-info {
  margin-bottom: 40rpx;
}

.word-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.word-phonetic-info {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.phonetic-item {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  
  transition: all 0.2s ease;
  cursor: pointer;
}

.phonetic-item:active {
  background: rgba(52, 152, 219, 0.1);
  border-color: rgba(52, 152, 219, 0.2);
  transform: scale(0.98);
}

.speaker-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.7;
}

.phonetic-item:active .speaker-icon {
  opacity: 1;
}

.phonetic-label {
  font-size: 26rpx;
  font-weight: 500;
  min-width: 40rpx;
}

.phonetic-text {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
  flex: 1;
}

/* 释义部分 */
.translations-section,
.tags-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
}

.translations-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.translation-item-detail {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.pos-tag {
  flex: 0 0 auto;
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 500;
  background: #f3f4f6;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  min-width: 48rpx;
  text-align: center;
}

.translation-content {
  flex: 1;
}

.meaning-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.example-text {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.4;
  font-style: italic;
}

/* 标签样式 */
.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-item {
  font-size: 22rpx;
  color: #4b5563;
  background: #e5e7eb;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 底部操作按钮 */
.word-detail-actions {
  flex: 0 0 auto;
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 2rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 22rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.action-btn.secondary {
  background: #f3f4f6;
  color: #6b7280;
}

.action-btn.secondary:active {
  background: #e5e7eb;
}

.action-btn.primary {
  background: rgb(52, 152, 219);
  color: #ffffff;
}

.action-btn.primary:active {
  background: rgb(41, 128, 185);
  transform: scale(0.98);
}

.action-btn.primary.collected {
  background: #10b981;
}

.action-btn.primary.collected:active {
  background: #059669;
}

/* 安全区域适配 */
@supports (bottom: env(safe-area-inset-bottom)) {
  .control-bar {
    padding-bottom: calc(10rpx + env(safe-area-inset-bottom));
  }
} 
/* book-detail页面样式 */
page {
  background-color: #fff;
  height: 100vh;
}

.book-detail-container {
  background-color: #fff;
  min-height: 100vh;
}

/* 书籍信息区域 */
.book-info-section {
  padding: 18px 20px 20px;
  background-color: #fff;
}

.book-detail-card {
  display: flex;
  margin-bottom: 20px;
}

.book-cover-large {
  width: 120px;
  height: 160px;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  margin-right: 16px;
  flex-shrink: 0;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.book-detail-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 160px;
  justify-content: space-between;
}

.book-title {
  font-size: 20px;
  font-weight: 600;
  color: #333;
  line-height: 1.3;
  margin-bottom: 6px;
}

.book-author {
  font-size: 14px;
  color: #666;
  margin-bottom: 16px;
}

/* 统计信息 */
.book-stats {
  display: flex;
  justify-content: flex-start;
  gap: 24px;
  margin-bottom: 16px;
  margin-top: 8px;
}

.stat-item {
  display: flex;
  align-items: baseline;
  gap: 2px;
}

.stat-value {
  font-size: 14px;
  font-weight: 600;
  color: #333;
}

.stat-label {
  font-size: 13px;
  color: #666;
}

/* 大进度条 */
.book-progress-large {
  margin-top: auto;
}

.progress-bar-large {
  width: 100%;
  height: 6px;
  background-color: #e0e0e0;
  border-radius: 3px;
  overflow: hidden;
  margin-bottom: 6px;
}

.progress-large {
  height: 100%;
  background-color: #007AFF;
  border-radius: 3px;
}

.progress-text-large {
  font-size: 12px;
  color: #007AFF;
  font-weight: 500;
}

/* 简介区域 */
.description-section {
  background-color: #fff;
  padding: 16px 20px 20px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12px;
}

.description-text {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 16px;
}

/* 标签 */
.book-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.tag-btn {
  display: inline-block !important;
  width: auto !important;
  min-width: auto !important;
  margin: 0 8px 8px 0 !important;
  padding: 0 12px !important;
  height: 28px !important;
  line-height: 28px !important;
  font-size: 12px !important;
  background-color: #f0f8ff !important;
  color: #4a90e2 !important;
  border: 1px solid #e1f0ff !important;
  border-radius: 16px !important;
  text-align: center !important;
  box-sizing: border-box !important;
}

.tag-btn::after {
  border: none !important;
  background: none !important;
}


/* 章节列表区域 */
.chapters-section {
  background-color: #fff;
  padding: 20px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.section-header .section-title {
  margin-bottom: 0;
}

.chapter-filter {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 6px 12px;
  background-color: #f5f5f5;
  border-radius: 16px;
  height: auto;
  min-height: 32rpx;
}

.filter-text {
  font-size: 13px;
  color: #666;
}


/* 章节列表 */
.chapters-list {
  height: 50vh;
  padding: 16px 0;
}

.chapter-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  margin-bottom: 10px;
  background-color: #f8f9fa;
  border-radius: 12px;
  border: 1px solid #f0f0f0;
}

.chapter-item.completed {
  background-color: rgba(76, 175, 80, 0.05);
  border-color: rgba(76, 175, 80, 0.2);
}

.chapter-item.in-progress {
  background-color: rgba(0, 122, 255, 0.05);
  border-color: rgba(0, 122, 255, 0.2);
}

.chapter-item.locked {
  opacity: 0.6;
}

.chapter-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.chapter-title {
  font-size: 15px;
  font-weight: 500;
  color: #333;
  margin-bottom: 4px;
}

.chapter-meta {
  font-size: 12px;
  color: #999;
}

/* 章节状态 */
.chapter-status {
  display: flex;
  align-items: center;
  gap: 8px;
}

.status-badge {
  padding: 2px 8px;
  font-size: 11px;
  border-radius: 10px;
  color: #fff;
}

.status-badge.completed {
  background-color: #4CAF50;
}

.status-badge.in-progress {
  background-color: #007AFF;
}

/* 迷你进度条 */
.mini-progress-container {
  display: flex;
  align-items: center;
  gap: 6px;
}

.mini-progress-bar {
  width: 40px;
  height: 3px;
  background-color: #e0e0e0;
  border-radius: 2px;
  overflow: hidden;
}

.mini-progress {
  height: 100%;
  background-color: #007AFF;
  border-radius: 2px;
}

.mini-progress-text {
  font-size: 11px;
  color: #007AFF;
  font-weight: 500;
  width: 30px;
}

/* 筛选器模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.filter-modal {
  background-color: #fff;
  border-radius: 16px;
  padding: 20px;
  margin: 20px;
  max-width: 300px;
  width: 100%;
}

.modal-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 16px;
}

.filter-options {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.filter-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  border-radius: 8px;
  background-color: #f8f9fa;
}

.filter-option.active {
  background-color: rgba(0, 122, 255, 0.1);
  color: #007AFF;
}

/* 加载更多和状态提示 */
.loading-more, .no-more {
  text-align: center;
  padding: 20px;
}

.loading-text, .no-more-text {
  font-size: 14px;
  color: #999;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.loading-more::before {
  content: '';
  width: 16px;
  height: 16px;
  border: 2px solid #e0e0e0;
  border-top: 2px solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式调整 */
@media (max-width: 320px) {
  .book-detail-card {
    flex-direction: column;
    align-items: center;
  }
  
  .book-cover-large {
    margin-right: 0;
    margin-bottom: 16px;
  }
  
  .book-detail-info {
    width: 100%;
    text-align: center;
  }
  
  .book-stats {
    align-items: center;
  }
}

/* 锁定状态样式 */
.chapter-item.locked {
  opacity: 0.6;
}

.lock-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.lock-badge {
  background: linear-gradient(45deg, #ff9500, #ffad33);
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(255, 149, 0, 0.3);
}

/* 会员码弹窗样式 */
.membership-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
  box-sizing: border-box;
}

.membership-modal {
  background: #ffffff;
  border-radius: 24rpx;
  width: 100%;
  max-width: 600rpx;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  position: relative;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  text-align: center;
}

.modal-close {
  position: absolute;
  right: 32rpx;
  font-size: 32rpx;
  color: #999999;
  padding: 8rpx;
}

.modal-content {
  padding: 32rpx;
}

.locked-chapter-info {
  background: #fff3e0;
  border: 2rpx solid #ffe0b2;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  text-align: center;
}

.locked-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #e65100;
  margin-bottom: 8rpx;
}

.locked-desc {
  display: block;
  font-size: 24rpx;
  color: #ef6c00;
}

.input-section {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.code-input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  font-family: 'Courier New', monospace;
  text-align: center;
  letter-spacing: 4rpx;
  color: #333333;
  box-sizing: border-box;
}

.code-input:focus {
  border-color: #667eea;
  background: #ffffff;
}

.membership-tips {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.tip-text:last-child {
  margin-bottom: 0;
}

.modal-actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx 32rpx;
}

.cancel-btn {
  flex: 1;
  height: 80rpx;
  background: #f8f9fa;
  color: #666666;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.confirm-btn {
  flex: 1;
  height: 80rpx;
  background: #74b9ff;
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirm-btn:disabled {
  background: #cccccc;
  color: #999999;
}
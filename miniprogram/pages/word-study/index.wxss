/* 单词本入口页面样式 */
.word-study-container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 0 32rpx 40rpx 32rpx;
}

/* 头部区域 */
.header-section {
  padding: 48rpx 0 32rpx 0;
  text-align: center;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666666;
}

/* 统计卡片区域 */
.stats-section {
  margin-bottom: 40rpx;
}

.stats-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
}

.stats-row {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 600;
  color: #007AFF;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

/* 学习入口区域 */
.entry-section {
  margin-bottom: 40rpx;
}

.entry-card {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.entry-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.entry-header {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
}

.entry-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  width: 64rpx;
  text-align: center;
}

.entry-info {
  flex: 1;
}

.entry-title {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 6rpx;
}

.entry-count {
  display: block;
  font-size: 26rpx;
  color: #666666;
}

.entry-arrow {
  font-size: 32rpx;
  color: #cccccc;
  font-weight: 300;
}

/* 不同类型单词的样式 */
.entry-card.new-words {
  border-left: 6rpx solid #007AFF;
}

.entry-card.review-words {
  border-left: 6rpx solid #34C759;
}

.entry-card.overdue-words {
  border-left: 6rpx solid #FF3B30;
}

.new-words:active {
  background: #f0f9ff;
}

.review-words:active {
  background: #f0fff4;
}

.overdue-words:active {
  background: #fff5f5;
}

/* 完成状态 */
.completed-state {
  text-align: center;
  padding: 80rpx 0;
}

.completed-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.completed-title {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.completed-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666666;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 80rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 设置区域 */
.settings-section {
  margin-top: 40rpx;
}

.settings-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.settings-item:active {
  transform: scale(0.98);
  background: #f8f8f8;
}

.settings-text {
  font-size: 30rpx;
  color: #1a1a1a;
}

.settings-arrow {
  font-size: 32rpx;
  color: #cccccc;
  font-weight: 300;
}

/* 安全区域适配 */
@supports (bottom: env(safe-area-inset-bottom)) {
  .word-study-container {
    padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  }
}
/* vocabulary单词本页面样式 */
page {
  background-color: #f8f9fa;
  height: 100vh;
}

.vocabulary-container {
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 主要内容区域 */
.main-content {
  padding: 24rpx 32rpx 40rpx 32rpx;
}

/* 单词列表 */
.word-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 单词项基础样式 */
.word-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 0;
  display: flex;
  position: relative;
  min-height: 140rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.word-item:active {
  transform: scale(0.98);
}

/* 不同类型单词的边框标识 */
.word-item.new {
  border-left: 6rpx solid #007AFF;
}

.word-item.review {
  border-left: 6rpx solid #34C759;
}

.word-item.overdue {
  border-left: 6rpx solid #FF3B30;
}

/* 已学习/已复习状态 */
.word-item.learned,
.word-item.reviewed {
  opacity: 0.7;
  background: #f8f9fa;
}

/* 展开状态 */
.word-item.expanded {
  min-height: auto;
  padding-bottom: 20rpx;
}

/* 序号容器 */
.word-number-container {
  position: absolute;
  left: 0;
  top: 0;
  width: 48rpx;
  height: 100%;
  background-color: #ebebeb;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  z-index: 1;
  transition: all 0.3s ease;
}

.word-number-container.learned-bg {
  background-color: #e1f5fe;
}

.word-number-container.reviewed-bg {
  background-color: #e8f5e8;
}

.word-number {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 400;
  color: #666666;
}

/* 内容区域容器 */
.word-content {
  display: flex;
  align-items: center;
  width: calc(100% - 48rpx);
  margin-left: 48rpx;
  min-height: 140rpx;
  gap: 16rpx;
}

/* 单词主要信息 */
.word-main {
  flex: 0 0 200rpx;
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  min-height: 140rpx;
  padding: 0 16rpx;
  position: relative;
}

/* 单词标题行（包含逾期标识） */
.word-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  width: 100%;
  margin-bottom: 6rpx;
}

.word-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.2;
  flex: 1;
}

.word-phonetic {
  font-size: 22rpx;
  color: #6b7280;
  font-family: 'Monaco', 'Consolas', monospace;
}

/* 逾期标识 */
.overdue-badge {
  font-size: 20rpx;
  color: #FF3B30;
  background: #FFE8E6;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  white-space: nowrap;
}

/* 翻译区域 */
.word-translation {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  min-height: 140rpx;
  overflow: hidden;
}

/* 翻译内容容器 */
.translation-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  justify-content: center;
  height: 100%;
  width: 100%;
}

.translation-item {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  line-height: 1.4;
  width: 100%;
  max-width: 100%;
}

.part-of-speech {
  flex: 0 0 auto;
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 500;
  min-width: 48rpx;
}

.meaning-container {
  flex: 1;
  position: relative;
  display: flex;
  align-items: baseline;
}

.meaning {
  flex: 1;
  font-size: 26rpx;
  color: #4b5563;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
  word-break: break-all;
}

/* 逾期单词处理按钮 */
.overdue-actions {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  padding: 20rpx 32rpx 0 32rpx;
  margin-top: 16rpx;
}

.overdue-btn {
  flex: 1;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.overdue-btn:active {
  transform: scale(0.95);
}

.remember-btn {
  background: #34C759;
  color: #ffffff;
}

.remember-btn:active {
  background: #28a745;
}

.vague-btn {
  background: #FF9500;
  color: #ffffff;
}

.vague-btn:active {
  background: #e6850e;
}

.forgot-btn {
  background: #FF3B30;
  color: #ffffff;
}

.forgot-btn:active {
  background: #e6342a;
}

/* 复习单词滑动操作按钮 */
.slide-actions {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  display: flex;
  z-index: 10;
}

.action-btn {
  width: 120rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn.forgot {
  background: #FF3B30;
}

.action-btn.mastered {
  background: #34C759;
}

.action-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 遮罩层样式 */
.english-mask-overlay,
.chinese-mask-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.english-mask-overlay {
  background: rgba(52, 152, 219, 0.9);
}

.chinese-mask-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 149, 0, 0.9);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.mask-text {
  font-size: 24rpx;
  color: #ffffff;
}

/* 设置弹窗 */
.settings-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.settings-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 600rpx;
  background: #ffffff;
  border-radius: 32rpx;
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.settings-modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background: #f5f5f5;
  font-size: 32rpx;
  color: #666;
}

.modal-body {
  padding: 40rpx;
}

.setting-item {
  margin-bottom: 32rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  background: #f8f9fa;
  transition: all 0.2s ease;
}

.setting-item:active {
  background: #e9ecef;
}

.setting-item.active {
  background: rgba(52, 152, 219, 0.1);
  border: 2rpx solid rgba(52, 152, 219, 0.3);
}

.setting-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.setting-desc {
  font-size: 24rpx;
  color: #666;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.4;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 原有loading样式保持兼容 */
.loading {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
}

/* 安全区域适配 */
@supports (bottom: env(safe-area-inset-bottom)) {
  .vocabulary-container {
    padding-bottom: env(safe-area-inset-bottom);
  }
}
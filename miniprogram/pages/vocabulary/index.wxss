/* vocabulary单词本页面样式 */
page {
  background-color: #ffffff;
  height: 100vh;
  padding-bottom: 120rpx; /* 为底部导航预留空间 */
}

.vocabulary-container {
  background-color: #ffffff;
  min-height: 100vh;
}

/* 头部区域重新设计 */
.header-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 日期切换区域 */
.date-selector {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.date-nav {
  padding: 12rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-arrow {
  font-size: 28rpx;
  font-weight: 600;
  color: #666666;
}

.date-display {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  margin: 0 16rpx;
  background-color: #f8f9fa;
  border-radius: 20rpx;
  min-width: 120rpx;
}

.date-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #1f2937;
}

/* 设置按钮 */
.settings-btn {
  padding: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.settings-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.7;
}

/* 主要内容区域 */
.main-content {
  padding: 20rpx;
  padding-top: 20rpx;
  background-color: #ffffff;
}

/* 单词列表 */
.word-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.word-item {
  background: #f8f8f8;
  border-radius: 20rpx;
  padding: 0;
  display: flex;
  position: relative;
  min-height: 140rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
  transition: all 0.2s ease;
}

.word-item:active {
  opacity: 0.8;
}

/* 序号容器 */
.word-number-container {
  position: absolute;
  left: 0;
  top: 0;
  width: 40rpx;
  height: 100%;
  background-color: #ebebeb;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  z-index: 1;
  transition: all 0.3s ease;
}

/* 已学习状态的绿色背景 */
.word-number-container.learned-bg {
  background-color: #4ade80;
}

/* 序号区域 */
.word-number {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 400;
  color: #666666;
}

.learned-bg .word-number {
  color: #ffffff;
  font-weight: 500;
}

/* 内容区域容器 */
.word-content {
  display: flex;
  align-items: center;
  width: 100%;
  margin-left: 40rpx;
  min-height: 140rpx;
}

/* 单词主要信息 */
.word-main {
  flex: 0 0 200rpx;
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  min-height: 140rpx;
  padding: 0 16rpx;
}

/* 有遮罩的容器需要相对定位 */
.word-main.has-mask,
.word-translation.has-mask {
  position: relative;
}

/* 翻译内容垂直居中 */
.translation-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

/* 刮刮乐遮罩样式 - 英文遮罩 */
.english-mask-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 50%, #9ca3af 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: inset 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
  z-index: 2;
  cursor: pointer;
}

/* 刮刮乐遮罩样式 - 中文遮罩 */
.chinese-mask-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 50%, #9ca3af 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: inset 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
  z-index: 2;
  cursor: pointer;
}

.mask-text {
  font-size: 24rpx;
  color: #374151;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
  letter-spacing: 1rpx;
}

.word-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6rpx;
  line-height: 1.2;
}

.word-phonetic {
  font-size: 22rpx;
  color: #6b7280;
  font-family: 'Monaco', 'Consolas', monospace;
}

/* 翻译区域 */
.word-translation {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  min-height: 140rpx;
  padding: 0 16rpx;
}

.translation-item {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  line-height: 1.4;
}

.part-of-speech {
  flex: 0 0 auto;
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 500;
}

.meaning {
  flex: 1;
  font-size: 26rpx;
  color: #4b5563;
}

/* 左滑操作按钮 */
.slide-actions {
  position: absolute;
  right: -300rpx;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  transition: all 0.3s ease;
  z-index: 10;
}

.word-item.sliding .slide-actions {
  right: 0;
}

.action-btn {
  width: 100rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.mastered {
  background-color: #10b981;
}

.action-btn.unfamiliar {
  background-color: #f59e0b;
}

.action-btn.delete {
  background-color: #ef4444;
}

.action-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 设置弹窗 */
.settings-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background-color: #ffffff;
  border-radius: 24rpx;
  width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.modal-close {
  font-size: 40rpx;
  color: #9ca3af;
  padding: 8rpx;
}

.modal-body {
  padding: 24rpx 0;
}

.setting-item {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: all 0.2s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item.active {
  background-color: #f0f9ff;
  border-left: 4rpx solid #0ea5e9;
}

.setting-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #6b7280;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* vocabulary单词本页面样式 */
page {
  background-color: #f8f9fa;
  height: 100vh;
}

/* 动画关键帧 */
@keyframes scratchOff {
  0% {
    clip-path: circle(0% at 50% 50%);
    opacity: 1;
  }
  100% {
    clip-path: circle(150% at 50% 50%);
    opacity: 0;
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-8rpx);
  }
  60% {
    transform: translateY(-4rpx);
  }
}

@keyframes slideOutLeft {
  0% {
    transform: translateX(0);
    opacity: 1;
  }
  100% {
    transform: translateX(-100%);
    opacity: 0;
  }
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.vocabulary-container {
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 主要内容区域 */
.main-content {
  padding: 24rpx 32rpx 40rpx 32rpx;
  height: 100vh;
  max-width: 100%;
  overflow: hidden;
  box-sizing: border-box;
}

/* 单词列表 */
.word-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 单词项基础样式 */
.word-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 0;
  display: flex;
  flex-direction: column;
  position: relative;
  min-height: 140rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  opacity: 1;
}

.word-item:active {
  transform: scale(0.98);
}

/* 不同类型单词的边框标识 */
.word-item.new {
  border-left: 6rpx solid #007AFF;
}

.word-item.review {
  border-left: 6rpx solid #34C759;
}

.word-item.overdue {
  box-shadow: 0 4rpx 16rpx rgba(255, 143, 90, 0.15);
}

/* 已学习/已复习状态 */
.word-item.learned,
.word-item.reviewed {
  opacity: 0.8;
  background: #f8f9fa;
  animation: bounce 0.6s ease-out;
}

.word-item.completed {
  animation: pulse 0.5s ease-out;
}

.word-item.removing {
  animation: slideOutLeft 0.4s ease-in forwards;
}

/* 展开状态 */
.word-item.expanded {
  min-height: 140rpx;
}

/* 序号容器 */
.word-number-container {
  position: absolute;
  left: 0;
  top: 0;
  width: 48rpx;
  height: 100%;
  background-color: #ebebeb;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  z-index: 1;
  transition: all 0.3s ease;
}

.word-number-container.learned-bg {
  background-color: #e1f5fe;
}

.word-number-container.reviewed-bg {
  background-color: #e8f5e8;
}

.word-number {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 400;
  color: #666666;
}

/* 内容区域容器 */
.word-content {
  display: flex;
  align-items: center;
  width: calc(100% - 48rpx);
  margin-left: 48rpx;
  min-height: 140rpx;
  gap: 16rpx;
  padding: 0 32rpx 0 16rpx;
  position: relative;
}

/* 单词主要信息 */
.word-main {
  flex: 0 0 200rpx;
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  min-height: 140rpx;
  padding: 24rpx 16rpx;
  position: relative;
}

/* 单词标题行（包含逾期标识） */
.word-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  width: 100%;
  margin-bottom: 6rpx;
}

.word-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.2;
  flex: 1;
}

.word-phonetic {
  font-size: 22rpx;
  color: #6b7280;
  font-family: 'Monaco', 'Consolas', monospace;
}

/* 逾期标识 */
.overdue-badge {
  font-size: 20rpx;
  color: #FF3B30;
  background: #FFE8E6;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  white-space: nowrap;
}

/* 翻译区域 */
.word-translation {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  min-height: 140rpx;
  padding: 24rpx 0;
  overflow: hidden;
  position: relative;
}

/* 翻译内容容器 */
.translation-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  width: 100%;
  overflow: hidden;
}

.translation-item {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  line-height: 1.4;
  width: 100%;
  max-width: 100%;
}

.part-of-speech {
  flex: 0 0 auto;
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 500;
  min-width: 48rpx;
}

.meaning {
  flex: 1;
  font-size: 26rpx;
  color: #4b5563;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
  word-break: break-all;
}

/* 逾期单词处理按钮 - 优化布局 */
.overdue-actions {
  width: calc(100% - 48rpx);
  margin-left: 40rpx; 
  background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
  border-top: 1rpx solid #e5e5e5;
  padding: 14rpx 16rpx;
  margin-top: 0;
  border-radius: 0 0 20rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  text-align: center;
}

.overdue-text {
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 600;
  background: #ff8f5a;
  padding: 0;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  flex-shrink: 0;
  border: none;
}

.overdue-buttons {
  display: flex;
  gap: 10rpx;
}

.overdue-btn {
  flex: 0 0 auto;
  height: 48rpx;
  min-width: 90rpx;
  padding: 0 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.remember-btn {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: #ffffff;
  border: 1rpx solid rgba(56, 158, 13, 0.3);
}

.remember-btn:active {
  background: linear-gradient(135deg, #389e0d 0%, #237804 100%);
  transform: translateY(1rpx) scale(0.95);
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.15);
}

.vague-btn {
  background: linear-gradient(135deg, #fa8c16 0%, #d46b08 100%);
  color: #ffffff;
  border: 1rpx solid rgba(212, 107, 8, 0.3);
}

.vague-btn:active {
  background: linear-gradient(135deg, #d46b08 0%, #ad4e00 100%);
  transform: translateY(1rpx) scale(0.95);
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.15);
}

.forgot-btn {
  background: linear-gradient(135deg, #ff4d4f 0%, #cf1322 100%);
  color: #ffffff;
  border: 1rpx solid rgba(207, 19, 34, 0.3);
}

.forgot-btn:active {
  background: linear-gradient(135deg, #cf1322 0%, #a8071a 100%);
  transform: translateY(1rpx) scale(0.95);
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.15);
}


/* 遮罩层样式 */
.english-mask-overlay,
.chinese-mask-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
  font-size: 24rpx;
  z-index: 10;
  margin: 0;
  padding: 0;
  cursor: pointer;
  pointer-events: auto;
}

/* 刮刮乐动画类 */
.mask-scratching {
  animation: scratchOff 0.8s ease-out forwards;
  pointer-events: none; /* 动画期间禁止点击 */
}

.english-mask-overlay {
  background: rgba(52, 152, 219, 0.9);
}

.chinese-mask-overlay {
  background: #C0C0C0;
}

.mask-text {
  font-size: 24rpx;
  color: #ffffff;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
  max-width: 100%;
  overflow: hidden;
  box-sizing: border-box;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
  word-wrap: break-word;
  max-width: 100%;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.4;
  word-wrap: break-word;
  max-width: 100%;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
  animation: pulse 1.5s ease-in-out infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 原有loading样式保持兼容 */
.loading {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
}

/* 安全区域适配 */
@supports (bottom: env(safe-area-inset-bottom)) {
  .vocabulary-container {
    padding-bottom: env(safe-area-inset-bottom);
  }
}


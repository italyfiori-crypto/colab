/* 设置页面样式 */
page {
  background-color: #f8f9fa;
  height: 100vh;
}

.settings-container {
  height: 100vh;
  padding: 24rpx;
  background-color: #f8f9fa;
  box-sizing: border-box;
}

/* 用户信息卡片 */
.user-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.user-avatar {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  background-color: #e6c549;
}

.avatar-edit-icon {
  position: absolute;
  bottom: -2rpx;
  right: -2rpx;
  width: 30rpx;
  height: 30rpx;
  background: #007AFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  border: 2rpx solid #ffffff;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.edit-icon {
  font-size: 24rpx;
  color: #007AFF;
  opacity: 0.8;
}

.user-id {
  font-size: 24rpx;
  color: #666666;
}

/* 设置区域 */
.settings-section {
  margin-bottom: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  padding: 32rpx 32rpx 16rpx 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.settings-list {
  padding: 0 32rpx 16rpx 32rpx;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: rgba(0, 0, 0, 0.02);
}

.setting-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.setting-icon {
  font-size: 36rpx;
  width: 44rpx;
  text-align: center;
}

.setting-label {
  font-size: 28rpx;
  color: #1a1a1a;
}

.setting-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.setting-value {
  font-size: 26rpx;
  color: #666666;
}

.arrow {
  font-size: 24rpx;
  color: #999999;
}

/* 会员信息卡片样式 */
.membership-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.membership-header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  color: #ffffff;
}

.membership-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.membership-info {
  flex: 1;
}

.membership-status {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.membership-desc {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
}

.membership-action {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
  backdrop-filter: blur(10rpx);
}

.action-text {
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 500;
}

.membership-benefits {
  padding: 0 32rpx 32rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.benefit-item:last-child {
  margin-bottom: 0;
}

.benefit-icon {
  font-size: 24rpx;
  margin-right: 16rpx;
  color: rgba(255, 255, 255, 0.8);
}

.benefit-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

/* 会员码输入弹窗样式 */
.membership-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
  box-sizing: border-box;
}

.membership-modal {
  background: #ffffff;
  border-radius: 24rpx;
  width: 100%;
  max-width: 600rpx;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  font-size: 32rpx;
  color: #999999;
  padding: 8rpx;
}

.modal-content {
  padding: 32rpx;
}

.input-section {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.code-input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  font-family: 'Courier New', monospace;
  text-align: center;
  letter-spacing: 4rpx;
  color: #333333;
  box-sizing: border-box;
}

.code-input:focus {
  border-color: #007AFF;
  background: #ffffff;
}

.modal-tips {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.tip-text:last-child {
  margin-bottom: 0;
}

.modal-actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx 32rpx;
}

.cancel-btn {
  flex: 1;
  height: 80rpx;
  background: #f8f9fa;
  color: #666666;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.confirm-btn {
  flex: 1;
  height: 80rpx;
  background: #007AFF;
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.confirm-btn:disabled {
  background: #cccccc;
  color: #999999;
}
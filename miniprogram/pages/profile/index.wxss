/* 设置页面样式 */
page {
  background-color: #f8f9fa;
  height: 100vh;
}

.settings-container {
  height: 100vh;
  padding: 24rpx;
  background-color: #f8f9fa;
  box-sizing: border-box;
}

/* 用户信息卡片 */
.user-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.user-avatar {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  background-color: #e6c549;
}

.avatar-edit-icon {
  position: absolute;
  bottom: -2rpx;
  right: -2rpx;
  width: 30rpx;
  height: 30rpx;
  background: #007AFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  border: 2rpx solid #ffffff;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.edit-icon {
  font-size: 24rpx;
  color: #007AFF;
  opacity: 0.8;
}

.user-id {
  font-size: 24rpx;
  color: #666666;
}

/* 设置区域 */
.settings-section {
  margin-bottom: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  padding: 32rpx 32rpx 16rpx 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.settings-list {
  padding: 0 32rpx 16rpx 32rpx;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: rgba(0, 0, 0, 0.02);
}

.setting-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.setting-icon {
  font-size: 36rpx;
  width: 44rpx;
  text-align: center;
}

.setting-label {
  font-size: 28rpx;
  color: #1a1a1a;
}

.setting-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.setting-value {
  font-size: 26rpx;
  color: #666666;
}

.arrow {
  font-size: 24rpx;
  color: #999999;
}
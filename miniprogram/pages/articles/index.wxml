<view class="container">
  <!-- 顶部搜索框 -->
  <view class="search-container">
    <view class="search-box">
      <image class="search-icon" src="data:image/svg+xml;base64," mode="aspectFit"></image>
      <input 
        class="search-input" 
        placeholder="搜索文章、话题..." 
        value="{{searchValue}}"
        bindinput="onSearchInput"
      />
    </view>
  </view>

  <!-- 分类标签 -->
  <scroll-view class="tabs-container" scroll-x>
    <view class="tabs">
      <view 
        wx:for="{{tabs}}" 
        wx:key="index"
        class="tab-item {{activeTab === index ? 'active' : ''}}"
        data-index="{{index}}"
        bindtap="onTabChange"
      >
        {{item}}
      </view>
    </view>
  </scroll-view>

  <!-- 文章列表 -->
  <scroll-view class="content" scroll-y>
    <view class="articles-list">
      <view 
        wx:for="{{filteredArticles}}" 
        wx:key="id"
        class="article-card"
        data-id="{{item.id}}"
        bindtap="onArticleClick"
      >
        <image class="article-image" src="{{item.image}}" mode="aspectFill"></image>
        <view class="article-content">
          <view class="article-category">{{item.category}}</view>
          <view class="article-title">{{item.title}}</view>
          <view class="article-description">{{item.description}}</view>
          <view class="article-meta">
            <view class="meta-item">
              <image class="meta-icon" src="data:image/svg+xml;base64," mode="aspectFit"></image>
              <text class="meta-text">{{item.duration}}</text>
            </view>
            <view class="meta-level {{item.level === '初级' ? 'beginner' : item.level === '中级' ? 'intermediate' : 'advanced'}}">
              {{item.level}}
            </view>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>

  <!-- 底部导航 -->
  <view class="bottom-nav">
    <view 
      class="nav-item {{activeNavIndex === index ? 'active' : ''}}"
      wx:for="{{navItems}}"
      wx:key="index"
      data-index="{{index}}"
      bindtap="onNavChange"
    >
      <image 
        class="nav-icon" 
        src="{{activeNavIndex === index ? item.activeIcon : item.icon}}" 
        mode="aspectFit"
      ></image>
      <text class="nav-text">{{item.name}}</text>
    </view>
  </view>
</view> 
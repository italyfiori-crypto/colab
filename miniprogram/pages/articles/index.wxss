.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 搜索框样式 */
.search-container {
  padding: 20rpx 0;
  background-color: #ffffff;
  width: 100%;
}

.search-box {
  display: flex;
  align-items: center;
  height: 80rpx;
  background-color: #f5f5f5;
  margin: 0 32rpx;
  border-radius: 40rpx;
  padding: 0 24rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  width: 100%;
}

.search-input::placeholder {
  color: #999;
}

/* 分类标签样式 */
.tabs-container {
  background-color: #ffffff;
  width: 100%;
  padding: 0 0 24rpx;
  white-space: nowrap;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.tabs {
  display: inline-flex;
  padding: 0 32rpx;
  gap: 24rpx;
}

.tab-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f0f0f0;
  border-radius: 40rpx;
  white-space: nowrap;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.tab-item.active {
  color: #ffffff;
  background-color: #4385FF;
}

/* 内容区域 */
.content {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 140rpx;
}

.articles-list {
  padding: 32rpx;
}

/* 文章卡片样式 */
.article-card {
  display: flex;
  background-color: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease;
}

.article-card:active {
  transform: scale(0.98);
}

.article-image {
  width: 240rpx;
  height: 180rpx;
  flex-shrink: 0;
}

.article-content {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  min-width: 0; /* 防止文本溢出 */
}

.article-category {
  display: inline-block;
  font-size: 22rpx;
  color: #4385FF;
  background-color: rgba(67, 133, 255, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  align-self: flex-start;
}

.article-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.meta-text {
  font-size: 22rpx;
  color: #999;
}

.meta-level {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.meta-level.beginner {
  color: #22C55E;
  background-color: rgba(34, 197, 94, 0.1);
}

.meta-level.intermediate {
  color: #F59E0B;
  background-color: rgba(245, 158, 11, 0.1);
}

.meta-level.advanced {
  color: #EF4444;
  background-color: rgba(239, 68, 68, 0.1);
}

/* 底部导航样式 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 140rpx;
  background-color: #ffffff;
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 100;
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 0;
}

.nav-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  opacity: 0.6;
  transition: opacity 0.2s ease;
}

.nav-item.active .nav-icon {
  opacity: 1;
}

.nav-text {
  font-size: 22rpx;
  color: #999;
  transition: color 0.2s ease;
}

.nav-item.active .nav-text {
  color: #4385FF;
  font-weight: 500;
}

/* 优化滚动体验 */
.tabs-container::-webkit-scrollbar,
.content::-webkit-scrollbar {
  display: none;
}

/* 响应式布局 */
@media screen and (max-width: 375px) {
  .article-card {
    flex-direction: column;
  }

  .article-image {
    width: 100%;
    height: 320rpx;
  }
} 
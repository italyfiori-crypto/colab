/* article-vocabulary页面样式 */
page {
  background-color: #f5f7fa;
  height: 100vh;
}

.vocabulary-container {
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e5e7eb;
  z-index: 1000;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 32rpx;
}

.nav-left {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.nav-right {
  width: 88rpx;
  height: 88rpx;
}

/* 主要内容区域 */
.main-content {
  padding: 20rpx;
  padding-top: 20rpx;
}

/* 单词列表 */
.word-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.word-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
  border: 1rpx solid #e8ecf0;
}

.word-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 已掌握状态 - 绿色背景 */
.word-item.mastered {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  border-color: #52c41a;
  box-shadow: 0 4rpx 16rpx rgba(82, 196, 26, 0.25);
}

.word-item.mastered .word-text {
  color: #ffffff;
  font-weight: 600;
}

.word-item.mastered .word-phonetic {
  color: rgba(255, 255, 255, 0.9);
}

.word-item.mastered .word-translation {
  color: rgba(255, 255, 255, 0.95);
}

.word-item.mastered .favorite-btn {
  background: rgba(255, 255, 255, 0.2);
  border-color: rgba(255, 255, 255, 0.4);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.word-item.mastered .favorite-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

/* 单词主要信息 */
.word-main {
  flex: 0 0 auto;
  min-width: 200rpx;
}

.word-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6rpx;
  line-height: 1.2;
}

.word-phonetic {
  font-size: 22rpx;
  color: #6b7280;
  font-family: 'Monaco', 'Consolas', monospace;
}

/* 翻译 */
.word-translation {
  flex: 1;
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.3;
  text-align: left;
  padding: 0 16rpx;
}

/* 操作按钮 */
.word-actions {
  flex: 0 0 auto;
}

.favorite-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  border: 2rpx solid #e5e7eb;
  border-radius: 50%;
  background: #f9fafb;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

.favorite-btn:active {
  transform: scale(0.9);
  background: #f3f4f6;
}

.favorite-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.9;
  transition: all 0.2s ease;
}

.favorite-btn.favorited .favorite-icon {
  opacity: 1;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .word-text {
    font-size: 30rpx;
  }
  
  .word-translation {
    font-size: 24rpx;
  }
  
  .word-phonetic {
    font-size: 20rpx;
  }
  
  .favorite-btn {
    width: 56rpx;
    height: 56rpx;
  }
  
  .favorite-icon {
    width: 28rpx;
    height: 28rpx;
  }
  
  .word-item {
    padding: 20rpx 16rpx;
  }
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-state .empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-state .empty-text {
  font-size: 28rpx;
  color: #999;
} 
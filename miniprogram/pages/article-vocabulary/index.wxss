/* article-vocabulary页面样式 */
page {
  background-color: #f5f7fa;
  height: 100vh;
}

.vocabulary-container {
  background-color: #ffffff;
  min-height: 100vh;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e5e7eb;
  z-index: 1000;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 32rpx;
}

.nav-left {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.nav-back {
  flex: 0 0 auto;
  padding: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-text {
  font-size: 36rpx;
  color: #1f2937;
  font-weight: 600;
}

.nav-placeholder {
  flex: 0 0 auto;
  width: 88rpx;
}

.nav-right {
  width: 88rpx;
  height: 88rpx;
}

/* 主要内容区域 */
.main-content {
  padding: 20rpx;
  padding-top: 20rpx;
  background-color: #ffffff;
}

/* 单词列表 */
.word-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.word-item {
  background: #f8f8f8;
  border-radius: 20rpx;
  padding: 0;
  display: flex;
  position: relative;
  min-height: 120rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.word-item:active {
  opacity: 0.8;
}

/* 序号容器 */
.word-number-container {
  position: absolute;
  left: 0;
  top: 0;
  width: 40rpx;
  height: 100%;
  background-color: #ebebeb;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  z-index: 1;
}

/* 序号区域 */
.word-number {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 400;
  color: #666666;
}

/* 内容区域容器 */
.word-content {
  display: flex;
  align-items: center;
  width: 100%;
  margin-left: 40rpx;
  min-height: 120rpx;
}

/* 单词主要信息 */
.word-main {
  flex: 0 0 auto;
  min-width: 160rpx;
  max-width: 180rpx;
  padding: 24rpx 16rpx;
}

.word-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6rpx;
  line-height: 1.2;
}

.word-phonetic {
  font-size: 22rpx;
  color: #6b7280;
  font-family: 'Monaco', 'Consolas', monospace;
}

/* 翻译区域 */
.word-translation {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 24rpx 0;
}

.translation-item {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  line-height: 1.4;
}

.part-of-speech {
  flex: 0 0 auto;
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 500;
  min-width: 48rpx;
}

.meaning {
  flex: 1;
  font-size: 26rpx;
  color: #4b5563;
}

/* 操作按钮 */
.word-actions {
  flex: 0 0 auto;
  position: relative;
  z-index: 10;
  padding: 24rpx 20rpx;
  display: flex;
  align-items: center;
}

.favorite-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  position: relative;
  z-index: 20;
}

.favorite-btn:active {
  transform: scale(0.9);
}

.favorite-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.9;
  transition: all 0.2s ease;
}

.favorite-btn.favorited .favorite-icon {
  opacity: 1;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .word-text {
    font-size: 30rpx;
  }
  
  .word-translation {
    font-size: 24rpx;
  }
  
  .word-phonetic {
    font-size: 20rpx;
  }
  
  .favorite-btn {
    width: 56rpx;
    height: 56rpx;
  }
  
  .favorite-icon {
    width: 28rpx;
    height: 28rpx;
  }
  
  .word-item {
    padding: 20rpx 16rpx;
  }
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-state .empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-state .empty-text {
  font-size: 28rpx;
  color: #999;
} 
{
  "chapter_patterns": [
    {
      "name": "alice_style",
      "multiline_regex": "^CHAPTER ([IVX]+)\\.\n([^\n]+)\n\n",
      "title_line_index": 1,
      "content_start_offset": 3
    },
    {
      "name": "numeric_style",
      "multiline_regex": "^CHAPTER ([IVX]+)\n([^\n]+)\n\n",
      "title_line_index": 1,
      "content_start_offset": 2
    },
    {
      "name": "prince",
      "multiline_regex": "^([0-9]+)\n\n([^\n]+)\n\n",
      "title_line_index": 2,
      "content_start_offset": 3
    },
    {
      "name": "ys",
      "multiline_regex": "^(\n\n\n)([^\n]+)(\n\n)",
      "title_line_index": 3,
      "content_start_offset": 3
    }
  ],
  "ignore_case": true,
  "sub_chapter": {
    "max_reading_minutes": 5,
    "words_per_minute": 200,
    "enable_splitting": true,
    "min_paragraphs_per_sub": 2
  },
  "sentence": {
    "output_subdir": "sentences",
    "segmenter": "pysbd",
    "language": "en",
    "clean": false,
    "enable_clause_splitting": true,
    "max_sentence_length": 100
  },
  "subtitle_parser": {
    "api_key": "sk-umedlfcxxcbzvyiobzxnigiyjrwgpeocgbffhhmwqmnlnein",
    "enabled": true,
    "batch_size": 5,
    "model": "Qwen/Qwen3-8B",
    "timeout": 120,
    "max_retries": 5
  },
  "statistics": {
    "output_filename": "meta.json",
    "enabled": true
  },
  "audio_compression": {
    "output_subdir": "compressed_audio",
    "format": {
      "format": "mp3",
      "bitrate": "64k",
      "codec": "mp3",
      "extension": ".mp3"
    }
  }
}